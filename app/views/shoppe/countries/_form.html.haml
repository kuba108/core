= form_for @country do |f|
  = f.error_messages
  = field_set_tag t('.user_details') do
    .splitContainer
      %dl.third
        %dt= f.label :name
        %dd= f.text_field :name, :class => 'focus text'
      %dl.third
        %dt= f.label :code2, t('.iso_3166_aplha_2')
        %dd= f.text_field :code2, :class => 'text'
      %dl.third
        %dt= f.label :code3, t('.iso_3166_aplha_3')
        %dd= f.text_field :code3, :class => 'text'
    .splitContainer
      %dl.third
        %dt= f.label :continent
        %dd= f.text_field :continent, :class => 'text'
      %dl.third
        %dt= f.label :tld, t('.tld')
        %dd= f.text_field :tld, :class => 'text'
      %dl.third
        %dt= f.label :eu_member, t('.eu_member')
        %dd.checkbox
          = f.check_box :eu_member
          = f.label :eu_member, t('.country_is_eu_member')

  %p.submit
    - unless @country.new_record?
      %span.right= link_to t('.delete'), @country, :class => 'button purple', :method => :delete, :data => {:confirm => t('.are_you_sure')}
    = f.submit :class => 'button green'
    = link_to t('.cancel'), :countries, :class => 'button'
