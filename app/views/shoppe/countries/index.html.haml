- @page_title = t('.countries')

= content_for :header do
  %p.buttons=link_to t('.new_country'), :new_country, :class => 'button green'
  %h2.countries= t('.countries')

.table
  %table.data
    %thead
      %tr
        %th= t('.name')
        %th= t('.iso_3166_aplha_2')
        %th= t('.iso_3166_aplha_3')
        %th= t('.continent')
        %th= t('.tld')
        %th= t('.eu')
    %tbody
      - for country in @countries
        %tr
          %td= link_to country.name, [:edit, country]
          %td= country.code2
          %td= country.code3
          %td= country.continent
          %td= country.tld
          %td= boolean_tag country.eu_member?
