- @page_title = "Gallery Categories"

= content_for :header do
  %p.buttons=link_to "New category", :new_gallery_category, :class => 'button green'
  %h2.products Gallery Categories

.table
  %table.data
    %thead
      %tr
        %th Name
    %tbody
      - if @gallery_categories.empty?
        %tr.empty
          %td No categories to display.
      - else
        - for cat in @gallery_categories
          %tr
            %td= link_to cat.name, [:edit, cat]
