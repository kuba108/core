- @page_title = t('.admin_login')
= display_flash
.loginArea
  %h2= t('.reset_your_password')
  = form_tag :login_reset, :class => 'login' do
    %p.field
      = text_field_tag 'email_address', params[:email_address], :class => 'focus', :placeholder => t('.email_address')
    %p.submit
      = submit_tag t('.login'), :class => 'button green'
    %p.reset
      = link_to t('.back_to_login'), login_path